---
import Proyecto1 from "../Proyecto1.astro";
import Proyecto2 from "../Proyecto2.astro";
import Proyecto3 from "../Proyecto3.astro";
import Proyecto4 from "../Proyecto4.astro";
---
<style>
swiper-container::part(bullet) {
    background-color: #63bda4 !important;
}

swiper-container::part(bullet-active) {
    background-color: #63bda4 !important;
}
</style>

<section id="projects"></section>
<div class="mt-40">
<p class="text-center max-w-full mb-8 mt-20 text-5xl tracking-tight font-extrabold text-white">
    Projects
</p>

<swiper-container class="mySwiper" navigation="true" pagination="true" pagination-dynamic-bullets="true" loop="true">
    <swiper-slide>
        <Proyecto1 />
    </swiper-slide>
    <swiper-slide>
        <Proyecto2 />
    </swiper-slide>
    <swiper-slide>
        <Proyecto3 />
    </swiper-slide>
    <swiper-slide>
        <Proyecto4 />
    </swiper-slide>
</swiper-container>
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"></script>
</div>